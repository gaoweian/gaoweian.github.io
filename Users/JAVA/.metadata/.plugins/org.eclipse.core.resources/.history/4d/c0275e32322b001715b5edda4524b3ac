package com.efg;
import java.util.Scanner;
public class Demo {
	static Scanner sc = new Scanner(System.in);
	static String name;
	static int money;
	public static void main(String[] args) {
		welcome();
	}
	public static void welcome(){
		System.out.println("------存取款-------");
		System.out.println("------1.账户信息------");
		System.out.println("------2.存款------");
		System.out.println("------3.取款------");
		System.out.println("------4.退出------");
		int p = sc.nextInt();
		switch(p){
			case 1:
				System.out.println("输入用户名：");
				name = sc.next();
				System.out.println("输入余额：");
				money = sc.nextInt();
				System.out.println("1.返回目录----2.退出");
				int i = sc.nextInt();
				if(i==1){
					welcome();
				}else if(i==2){
					System.exit(0);
				}
				break;
			case 2:
				System.out.println("输入存款金额：");
				money = sc.nextInt();
				System.out.println("1.返回目录----2.退出");
				int b = sc.nextInt();
				if(b==1){
					welcome();
				}else if(b==2){
					System.exit(0);
				}
				break;
			case 3:	
				ZhangHu zhanghu = new ZhangHu(name,money);
				System.out.println("输入取款金额：");
				int s = sc.nextInt();
				money=s+money;
				QuqianThread ka = new QuqianThread(zhanghu,money);
				new Thread(ka).start();
				System.out.println("1.返回目录----2.退出");
				int n = sc.nextInt();
				if(n==1){
					welcome();
				}else if(n==2){
					System.exit(0);
				}
			case 4:	
				System.exit(0);
		}
	}
	
}

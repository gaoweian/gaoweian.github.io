package com.dub;

import java.io.*;
import java.net.*;
import java.util.List;



public class ServerRunnable implements Runnable{
	Socket t =null;
	List<Socket> li = null;
	public ServerRunnable(Socket t,List<Socket> list){
		this.t = t;
		this.li = li;
	}
	
	

	public void run(){
		try{
		//服务端输入流
		System.out.println("正在接收客户端发送数据");
		BufferedReader bf = new BufferedReader(new InputStreamReader(t.getInputStream()));
		String ss = bf.readLine();
		System.out.println("服务器:你是");
		System.out.println("客户端:"+ss);
		String cc = new String(t.getInetAddress().getHostAddress());
		System.out.println("地址是："+cc); 
		//服务端输出流
		System.out.println("正在向服务器发送数据");
		String sss= "已接收消息"+ss;
		for(Socket l:li ){
			PrintWriter w = new PrintWriter(l.getOutputStream());
			w.write(sss+"\n");
			w.flush();
			bf.close();
			w.close();
		}
		}catch(Exception e){
			e.printStackTrace();
		}
	}
}
